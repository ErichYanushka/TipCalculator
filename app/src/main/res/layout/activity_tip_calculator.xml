<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".TipCalculatorActivity"
    android:background="@drawable/Shield">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bill Amount"
        android:id="@+id/billAmountLabel"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="25dp"
        android:textColor="#ffffffff" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/billAmountEditText"
        android:editable="true"
        android:enabled="true"
        android:background="#ffffffff"
        android:textSize="25dp"
        android:layout_below="@+id/billAmountLabel"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Percent"
        android:id="@+id/percentLabel"
        android:layout_marginTop="57dp"
        android:textSize="25dp"
        android:textColor="#ffffffff"
        android:layout_below="@+id/billAmountEditText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:id="@+id/percentUpButton"
        android:textSize="25dp"
        android:clickable="true"
        android:enabled="true"
        android:maxHeight="45dp"
        android:maxWidth="45dp"
        android:layout_alignTop="@+id/percentLabel"
        android:layout_toLeftOf="@+id/percentDownButton"
        android:layout_toStartOf="@+id/percentDownButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:id="@+id/percentDownButton"
        android:textSize="25dp"
        android:clickable="true"
        android:enabled="true"
        android:maxHeight="45dp"
        android:maxWidth="45dp"
        android:layout_alignTop="@+id/percentUpButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:width="45dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tip Amount"
        android:id="@+id/tipAmountLabel"
        android:layout_below="@+id/percentUpButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="26dp"
        android:textSize="25dp"
        android:textColor="#ffffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total"
        android:id="@+id/totalLabel"
        android:layout_below="@+id/tipAmountLabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="66dp"
        android:textSize="25dp"
        android:textColor="#ffffffff" />
</RelativeLayout>
